html(lang=language)
    head
        title #{title}
        link(rel="stylesheet" type="text/css" href="/static/normalize.css")
        link(rel="stylesheet" href="https://cdn.jsdelivr.net/npm/@mdi/font@latest/css/materialdesignicons.min.css")

        if(env.NODE_ENV === "production")
            include webpackBundles
            link(rel='stylesheet', href="/static/app" + appName + ".css")

        else
            script var ENVIRONMENT = "development"
            script(src="http://localhost:3000/App/Static/main.js" type="module")
        if(isLogged)
            style(id="rf-live-styles")
        block head
        body
            div(id="rf-vue-container")
                div(id="rf-content-container")
                    rf-app(is-logged=isLogged)
                        block body
