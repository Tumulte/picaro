    /*--bgLight: #f6f2ee;
    --bg: #EEE6DF;
    --bgMedium: #E5D2C1;
    --highlight: #EB420E;
    --main: #a94849;
    --secondaryDark: #355a60;
    --secondary: #3e99c5;
    --warning: #D29627;
    --info: #983CA1;
    --valid: #3CA14F;
     */
    --lineHeight: calc(1rem * 1.7);
    --bgXLight: #fffcf6;
    --bgLight: #fde5b00f;
    --bgMedium: #f8e4c7;
    --bgDark: #8f4e3b;
    --greyLight: #f5f5f5;
    --greyMedium: #babfc2;
    --grey: #6a6e70;
    --greyDark: #414141;
    --secondaryDark: #225271;
    --secondary: #699eae;
    --secondaryLight: #9ee4f5;
    --mainDark: #591C1C;
    --main: #d36147;
    --mainLight: #eaa89a;
    --mainTrans: #d3624888;
    --highlight: #63ef75;
    --highlight2: #dbdb35;
    --highlight2light: #fdff8a;
    --warning: #f6a71f;
    --warningDark: #f09800;
    --success: #57c16e;
    --successDark: #3a8c4a;
    --error: #E47159;
    --errorDark: #a94849;
    --info: #7DA5EB;
    --infoDark: #2078cf;
    --dark: #41370e;
    --white: #fff;
    --4xs: calc(1rem * 1.7 / 10);
    --3xs: calc(1rem * 1.7 / 5);
    --xxs: calc(1rem * 1.7 * 2 / 5);
    --xs: calc(1rem * 1.7 * 3 / 5);
    --s: calc(1rem * 1.7 * 4 / 5);
    --m: calc(1rem * 1.7);
    --l: calc(1rem * 1.7 * 5 / 4);
    --xl: calc(1rem * 1.7 * 5 / 3);
    --xxl: calc(1rem * 1.7 * 5 / 2);
}

