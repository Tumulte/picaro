    --valid: #3CA14F;
     */
    --lineHeight: calc(1rem * 1.7);
    --bgXLight: #fffcf6;
    --bgLight: #fde5b00f;
    --bgMedium: #f8e4c7;
    --bgDark: #8f4e3b;
    --greyLight: #f5f5f5;
    --grey: #6a6e70;
    --greyDark: #414141;
    --secondaryDark: #225372;
    --secondary: #6c94da;
    --secondaryLight: #9ee4f5;
    --mainDark: #6a0967;
    --main: #d36147;
    --mainTrans: #d3624888;
    --mainLight: #f1abc5;
    --highlight: #63ef75;
    --highlight2: #dbdb35;
    --highlight2light: #fdff8a;
    --warning: #f6a71f;
    --warningDark: #f09800;
    --success: #57c16e;
    --successDark: #3a8c4a;
    --error: #E47159;
    --errorDark: #a94849;
    --info: #7DA5EB;
    --infoDark: #2078cf;
    --dark: #41370e;
    --white: #fff;
    --4xs: calc(1rem * 1.7 / 10);
    --3xs: calc(1rem * 1.7 / 5);
    --xxs: calc(1rem * 1.7 * 2 / 5);
    --xs: calc(1rem * 1.7 * 3 / 5);
    --s: calc(1rem * 1.7 * 4 / 5);
    --m: calc(1rem * 1.7);
    --l: calc(1rem * 1.7 * 5 / 4);
    --xl: calc(1rem * 1.7 * 5 / 3);
    --xxl: calc(1rem * 1.7 * 5 / 2);
}

