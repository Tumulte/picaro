    --valid: #3CA14F;
     */
    --lineHeight: calc(1rem * 1.7);
    --bgXLight: #fffcf6;
    --bgLight: #fff8e9;
    --bgMedium: #f8e4c7;
    --greyLight: #f5f5f5;
    --secondaryDark: #2c1b3a;
    --secondary: #6c94da;
    --secondaryLight: #7791b2;
    --mainDark: #6a0967;
    --main: #cc6a50;
    --mainLight: #f1abc5;
    --highlight: #63ef75;
    --highlight2: #dbdb35;
    --highlight2light: #fdff8a;
    --warning: #e8a421;
    --success: #33bf45;
    --dark: #41370e;
    --4xs: calc(var(--lineHeight) / 10);
    --3xs: calc(var(--lineHeight) / 5);
    --xxs: calc(2 * var(--lineHeight) / 5);
    --xs: calc(3 * var(--lineHeight) / 5);
    --s: calc(4 * var(--lineHeight) / 5);
    --m: var(--lineHeight);
    --l: calc(5 * var(--lineHeight) / 4);
    --xl: calc(5 * var(--lineHeight) / 3);
    --xxl: calc(5 * var(--lineHeight) / 2);
}

