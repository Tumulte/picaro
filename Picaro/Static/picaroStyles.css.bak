    /*--bgLight: #f6f2ee;
    --bg: #EEE6DF;
    --bgMedium: #E5D2C1;
    --highlight: #EB420E;
    --main: #a94849;
    --secondaryDark: #355a60;
    --secondary: #3e99c5;
