html {
    font-family: knile, sans-serif;
    font-weight: 200;
    font-size: 20px;
    line-height: var(--lineHeight);
}

body {
    margin: 0;
}

h1, h2, h3, h4, h5, h6 {
    color: var(--main);
}

H1 {
    font-size: 5rem;
    font-weight: 700;
    line-height: 1;
    margin-top: var(--xl);
    margin-bottom: var(--l);
    text-shadow: 7px 8px 0 var(--warning)
}

.pic-page h1:first-of-type {
    margin-top: calc(var(--xl) - var(--l));
}

H2 {
    font-size: 3.5rem;
    font-weight: 600;
    line-height: 1;
    margin-top: var(--xl);
    margin-bottom: var(--l);
    text-shadow: -7px 4px 0 var(--mainLight)
}

h3 {
    font-size: 2.9rem;
    font-weight: 500;
    line-height: 1;
    margin-top: var(--l);
    margin-bottom: var(--m);
    text-shadow: -3px 5px 0 var(--bgMedium)
}

H4 {
    font-size: 2.4rem;
    font-weight: 400;
    line-height: 1;
    margin-top: var(--m);
    margin-bottom: var(--s)
}

H5 {
    font-size: 2em;
    font-weight: 300;
    line-height: 1;
    margin-top: var(--m);
    margin-bottom: var(--s)
}

H6 {
    font-size: 1.5rem;
    font-weight: 200;
    line-height: 1;
    margin-top: var(--s);
    margin-bottom: var(--xs)
}

a {
    color: var(--secondary);
    text-decoration: none;
}

ul li {
    list-style: none;
    margin: var(--3xs)
}

ul li::before {
    content: "⧉";
    display: inline-block;
    width: 1em;
    transform: rotate(45deg);
    margin-left: -1em;
    margin-right: 0.3em;
}

ul li li::before {
    content: "□";
}

ul li li li::before {
    content: "⸬";
}

ul li li li li::before {
    transform: rotate(0);
    content: "⁖"
}

ul li li li li li::before {
    transform: rotate(45deg);
    content: "⁚"
}

p {
    margin: var(--m) 0;
}

b {
    font-weight: 500;
}

mark {
    background: var(--highlight);
    color: var(--secondaryDark)
}

input {
    font-size: 1em;
    background: var(--bg);
    padding: var(--xxs);
    border-width: var(--3xs);
    border-color: var(--secondary);
    border-style: solid;
    background: var(--bgLight);
    box-shadow: var(--3xs) var(--3xs) 0 var(--secondary);
}

::placeholder {
    color: var(--secondaryLight);
    opacity: 0.5
}

input:focus {
    outline: none;
    border-style: ridge;
}

table {
    border-collapse: collapse;
    border-spacing: 0;
    width: 100%;
    border-left: var(--3xs) solid var(--secondary);
}

td, th {
    padding: var(--xxs);
}

tr:nth-of-type(odd) {
    background: var(--greyLight);
}

th {
    background: #fff;
}

blockquote {
    font-size: 1.5rem;
    color: var(--secondaryDark);
    position: relative;
    font-weight: 600;
}

blockquote p {
    z-index: 2;
    position: relative;
}

blockquote::after {
    content: "";
    background: url("/static/images/asfalt-dark.png");
    position: absolute;
    top: 1rem;
    bottom: 6rem;
    left: 1rem;
    right: -1rem;
}

blockquote::before {
    content: "";
    background: var(--highlight2light);
    position: absolute;
    top: 2rem;
    bottom: 5rem;
    left: 2rem;
    right: 1rem;
}

cite {
    font-family: abbeySans, sans-serif;
    font-size: 3rem;
    line-height: 3rem;
    text-align: right;
    display: block;
    color: var(--main)
}

.pic-container {
    padding: var(--l);
}

.pic-page {
    margin: auto;
    max-width: 1900px;
    background: #fff;
    padding: var(--l);
}

.pic-page-container {
    background-image: url("/static/images/inspiration-geometry.png");
    background-color: var(--bgLight);
}