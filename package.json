{
  "name": "javascript-development-environment",
  "version": "0.0.1",
  "repository": {
    "url": "https: //github.com/Tumulte/nodeDevEnv.git",
    "email": "info@e-rouge.net"
  },
  "description": "Initial Json for a Node project",
  "scripts": {
    "prestart": "babel-node buildScripts/startMessage.js",
    "start": "node ./buildScripts/server.js",
    "start:dev": "npm-run-all --parallel open:src security-check test:watch lint:watch",
    "open:src": "set NODE_ENV='development'&& babel-node buildScripts/server.js",
    "security-check": "npm audit",
    "lint": "esw src controller buildScripts controller --color",
    "lint:watch": "npm run lint -- --watch",
    "test": "mocha --reporter progress  \"src/**/*.test.js\" \"controller/**/*.test.js\"",
    "test:watch": "npm run test -- --watch"
  },
  "author": "Ã‰tienne Rouge",
  "license": "SEE LICENSE IN LICENCE.md",
  "dependencies": {
    "jsdom": "11.11.0",
    "pug": "2.0.3",
    "lowdb": "1.0.0",
    "shortid": "2.2.12",
    "express": "4.16.3",
    "body-parser": "1.18.3",
    "json-server": "0.14.0",
    "json-schema-faker": "0.5.0-rc15",
    "compression": "1.7.3"
  },
  "devDependencies": {
    "babel": "^6.23.0",
    "babel-cli": "^6.26.0",
    "babel-core": "^6.26.3",
    "babel-loader": "^7.1.5",
    "babel-preset-env": "^1.7.0",
    "chai": "4.1.2",
    "chalk": "2.4.1",
    "css-loader": "^1.0.0",
    "eslint": "5.2.0",
    "eslint-plugin-import": "2.13.0",
    "eslint-watch": "4.0.2",
    "google-auth-library": "1.6.1",
    "googleapis": "32.0.0",
    "jquery": "3.3.1",
    "less": "^3.8.1",
    "less-loader": "^4.1.0",
    "mocha": "5.2.0",
    "nock": "9.4.3",
    "nodemon": "1.18.3",
    "npm-run-all": "4.1.3",
    "style-loader": "^0.22.1",
    "supertest": "3.1.0",
    "watchify": "3.11.0",
    "webpack": "^4.16.5",
    "webpack-dev-middleware": "^3.1.3"
  },
  "nodemonConfig": {
    "verbose": true,
    "ignore": [
      "public/*",
      "views/*",
      "*.test.js"
    ]
  }
}