{
    "name": "javascript-development-environment",
    "version": "0.0.1",
    "repository": {
        "url": "https: //github.com/Tumulte/nodeDevEnv.git",
        "email": "info@e-rouge.net"
    },
    "description": "Initial Json for a Node project",
    "scripts": {
        "prestart": "node app/startMessage.js",
        "start": "node ./app/server.js",
        "start:dev": "npm-run-all --parallel open:src security-check test:watch lint:watch",
        "open:src": "set NODE_ENV='development'&& nodemon --watch App App/server.js",
        "security-check": "npm audit",
        "lint": "esw App --color",
        "lint:watch": "npm run lint -- --watch",
        "test": "mocha --reporter progress  \"App/**/*.test.js\" \"app*/**/*.test.js\"",
        "test:watch": "npm run test -- --watch",
        "build": "webpack --mode=development --config webpack.config.dev.js"
    },
