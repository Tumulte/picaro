admin-panel(inline-template="")
    div(id="_main" class="_panel")
        warning-component( :warning-message="warningMessage")
        form(action="/appapi/settings/?_method=PUT"  id="_admin-form" method="POST" @submit.prevent="saveConfig($event)")
            input(type="text" name="navStructureString" v-model="navStructureString")
            label
                input(type="text" name="id" v-model="settings.id")
            label App name
                input(type="text" name="name" v-model="settings.name")
            input(type="hidden" name="styleSet" v-model="setName")
            label App language
                input(type="text" name="language" v-model="settings.language")
            label App title
                input(type="text" name="title" v-model="settings.title")
            label Dev Mode

                input(v-if="settings.devMode" type="checkbox" checked="checked")
                input(v-else type="checkbox")
            label Message Timeout (in ms)
                input(type="text" v-model="settings.messageTimeOut")
            button() submit
            button(@click.prevent="saveConfig($event,true)" id="_admin-form-ext-submit") submit
        div
            each file in views
                div  #{file}
